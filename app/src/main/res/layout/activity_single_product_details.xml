<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.SingleProductDetailsActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white2"
            app:cardCornerRadius="0dp"
            app:strokeColor="@color/lightGrey"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:contentDescription="Menu Drawer Icon"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/casualTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:layout_toRightOf="@+id/imgMenu"
            android:layout_centerVertical="true"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner_box_grey_bg"
                android:weightSum="3"
                android:layout_marginRight="15dp"
                android:layout_weight="0.75"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/quantityMinusTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_minus"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_marginLeft="3dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    />
                <TextView
                    android:id="@+id/quantityTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/quantityPlusTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plus"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
            <Button
                android:id="@+id/addToCartBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Add to cart"
                android:layout_weight="1.25"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainNestedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/productMainImg"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/light_grey2"
                app:strokeWidth="0dp">
                <ImageView
                    android:id="@+id/productImgMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/no_image"
                    android:scaleType="fitCenter"/>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productMultipleImgRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productMainImg"/>

            <TextView
                android:id="@+id/productTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLACK STRIPED T-SHIRT"
                android:layout_below="@id/productMultipleImgRecycler"
                android:layout_margin="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>
            <com.example.ecommercewhitelabel.Utils.CustomRatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productTitleTxt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/productPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:layout_below="@id/ratingBar"
                android:layout_margin="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_dark_grey"
                android:layout_below="@id/productPriceTxt"
                android:layout_margin="15dp"/>
            <TextView
                android:id="@+id/selectColorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Colors"
                android:layout_below="@id/v1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/colorCard1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/selectColorTxt"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/black">
                <ImageView
                    android:id="@+id/colorImg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_tick_for_color"
                    android:padding="5dp"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/colorCard2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/selectColorTxt"
                android:layout_toRightOf="@id/colorCard1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/green">
                <ImageView
                    android:id="@+id/colorImg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/colorCard3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/selectColorTxt"
                android:layout_toRightOf="@id/colorCard2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/red">
                <ImageView
                    android:id="@+id/colorImg3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"/>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_dark_grey"
                android:layout_below="@id/colorCard1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/chooseSizeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Size"
                android:layout_below="@id/v2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <GridLayout
                android:id="@+id/sizePickingGL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chooseSizeTxt"
                android:columnCount="2"
                android:rowCount="2">
                <TextView
                    android:id="@+id/smallTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small"
                    android:background="@drawable/rounded_corner_box_grey_bg"
                    android:layout_below="@id/chooseSizeTxt"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_row="0"
                    android:layout_column="0" />
                <TextView
                    android:id="@+id/mediumTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:background="@drawable/rounded_corner_box_grey_bg"
                    android:layout_below="@id/chooseSizeTxt"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_row="0"
                    android:layout_column="1" />
                <TextView
                    android:id="@+id/largeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large"
                    android:background="@drawable/rounded_corner_box_grey_bg"
                    android:layout_below="@id/chooseSizeTxt"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="0" />
                <TextView
                    android:id="@+id/xLargeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X-Large"
                    android:background="@drawable/rounded_corner_box_grey_bg"
                    android:layout_below="@id/chooseSizeTxt"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="1" />
            </GridLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sizePickingGL"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:tabBackground="@color/light_dark_grey"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/black"
                app:tabIndicatorColor="@color/black"
                app:tabMode="fixed"
                app:tabGravity="fill" />

            <!-- ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tabLayout"
                app:layout_constraintTop_toBottomOf="@id/tabLayout" />

            <TextView
                android:id="@+id/productSuggestionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You may also like"
                android:layout_below="@id/viewPager"
                android:layout_margin="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestionRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productSuggestionTxt"
                tools:listitem="@layout/activity_mens_casual_clothes"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>