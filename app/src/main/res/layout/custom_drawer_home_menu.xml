<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#08FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:contentDescription="Profile Icon"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_main_logo"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imgUser"
                android:background="@color/white" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/itemsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/layoutShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Shop"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/dropdown1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_dropdown_down"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/shopItemsDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dropdown1"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/mensClothesTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Men's clothes"
                            android:textColor="@color/black"
                            android:padding="7dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:id="@+id/womensClothesTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Women's clothes"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:id="@+id/kidsClothesTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Kid's clothes"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:id="@+id/bagsAndShoesTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Bags and Shoes"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/layoutOnSale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="On Sale"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutNewArrivals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="New Arrivals"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutEBrands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Brands"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutMyAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="My Account"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_dropdown_down"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/myAccountItemsDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dropdown1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/profileTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Profile"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:padding="7dp"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:id="@+id/ordersTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Orders"
                            android:textSize="15sp"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:id="@+id/addressTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Address"
                            android:textSize="15sp"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:id="@+id/wishListTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="WishList"
                            android:textSize="15sp"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/layoutLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Login"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/poppins"
                            android:text="Logout"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="100dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drawer_back" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/transLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#08FFFFFF"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>