<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:strokeWidth="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <com.example.ecommercewhitelabel.Utils.CustomRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/reviewerNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex k. "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/ratingBar"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_order_placed"
            android:layout_toRightOf="@id/reviewerNameTxt"
            android:layout_below="@id/ratingBar"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/reviewContentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_description"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/reviewerNameTxt"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/reviewDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted on August 14, 2020"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_below="@id/reviewContentTxt"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>